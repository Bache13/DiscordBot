<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>
  <config>
    <!-- Disable fallback package folders -->
    <add key="fallbackPackageFolders" value=""/>
    <!-- Set a Linux-friendly global packages folder (relative to your working directory) -->
    <add key="globalPackagesFolder" value="packages"/>
  </config>
</configuration>
